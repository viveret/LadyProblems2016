<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
	android:layout_height="fill_parent"
    android:baselineAligned="false"
    android:orientation="vertical">

  <!--   User profile information   -->

  <TextView
      android:text="User"
      style="@style/Header"

      android:layout_width="wrap_content"
      android:layout_height="wrap_content"

      android:layout_marginTop="8dp"
      android:layout_marginLeft="7.5dp"/>

  <TextView
      android:id="@id/user_full_name"
      android:text="Jane Smith"

      android:layout_width="wrap_content"
      android:layout_height="wrap_content"

      android:layout_marginTop="8dp"
      android:layout_marginLeft="7.5dp"/>

  <TextView
      android:id="@id/user_sub_info"
      android:text="Female, 24 "

      android:layout_width="wrap_content"
      android:layout_height="wrap_content"

      android:layout_marginTop="4dp"
      android:layout_marginLeft="7.5dp"/>

  <!--   Emergency contact information   -->

  <TextView
      android:text="Emergency Contact"
      style="@style/Header"

      android:layout_width="wrap_content"
      android:layout_height="wrap_content"

      android:layout_marginLeft="7.5dp"
      android:layout_marginTop="32dp" />

  <TextView
      android:id="@id/emergency_contact_full_name"
      android:text="Barbara Jones"

      android:layout_width="wrap_content"
      android:layout_height="wrap_content"

      android:layout_marginTop="8dp"
      android:layout_marginLeft="7.5dp"/>

  <TextView
      android:id="@id/emergency_contact_phone_number"
      android:text="(206) 123-1234 "

      android:layout_width="wrap_content"
      android:layout_height="wrap_content"

      android:layout_marginLeft="7.5dp"
      android:layout_marginTop="4dp"/>

  <ImageView
      android:id="@id/google_map_view"

      android:layout_width="fill_parent"
      android:layout_height="fill_parent"

      android:layout_marginTop="8dp"/>

  <Button
      android:layout_width="57dp"
      android:layout_height="wrap_content"
      android:textColor="#000000"
      android:background="#ffffff"
      android:layout_alignParentBottom="true"
      android:layout_alignLeft="@+id/user_sub_info"
      android:layout_alignStart="@+id/user_sub_info" />

</LinearLayout>
