<?xml version="1.0" encoding="utf-8"?>
<resources>
	<!-- inherit from the material theme -->
    <color name="background">#3D475C</color>
    <color name="orangeAccent">#FCBB7E</color>
    <color name="grey">#373131</color>
    <color name="red">#DF5C5C</color>
    <color name="blueAccent">#4a90e2</color>
    <color name="blueButton">#86a7ce</color>
    <color name="white">#ffffff</color>

	<style name="Theme">
		<item name="android:background">@color/background</item>
		<item name="android:colorAccent">@color/orangeAccent</item>
		<item name="android:buttonStyle">@style/Theme.Button</item>
	</style>

	<style name="Theme.Button" parent="@android:style/Widget.Button">
		<item name="android:background">@color/blueButton</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">20sp</item>
		<item name="android:padding">10dp</item>
	</style>

	<style name="Theme.Splash" parent="android:Theme">
		<item name="android:windowNoTitle">true</item>
		<!--item name="android:windowBackground">@drawable/splash</item-->
	</style>
    
	<style name="Theme.NoTitleBar" parent="android:Theme">
		<item name="android:windowNoTitle">true</item>
		<!--item name="android:windowBackground">@drawable/splash</item-->
	</style>

    <style name="Header" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="Subscript" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">30sp</item>
    </style>


</resources>
